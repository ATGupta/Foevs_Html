        <script>
        	function searchthisSite(){
				var input = document.getElementById("searchfoevs").value;
				arr=input.split(" ");
				search=arr[0];
				for(var i=1;i<arr.length;i++){
					search=search + "+" + arr[i];
				}
				search = search + "+site%3Ahttp%3A%2F%2Ffoevs.in";
				search = "https://www.google.com/search?q="+search;
				window.open(search);
        	}
        </script>